Select.ToggleNotifhour {
	if notifhour != "Выкл" {notifhour = "Выкл"}
	else {notifhour = "Вкл"}
	--; OnConfigMenu
}
Select.ToggleHemisphere {
	if hemisphere != "Северном" {hemisphere = "Северном"}
	else {hemisphere = "Южном"}
	--; OnConfigMenu
}

